[Container]
# ============================================================================
# 開發環境：Partner JWT Secrets 配置
# ============================================================================
# 這些是固定的測試 Secret，方便開發和測試
# 生產環境會使用 Podman Secrets 替代

# Partner A - 完整權限（orders, products, users）
Environment=JWT_SECRET_PARTNER_A=dev-secret-partner-a-for-testing-only-32chars

# Partner B - 僅訂單唯讀（orders:read）
Environment=JWT_SECRET_PARTNER_B=dev-secret-partner-b-for-testing-only-32chars

# Partner C - 產品讀寫（products:read,write）
Environment=JWT_SECRET_PARTNER_C=dev-secret-partner-c-for-testing-only-32chars

# ============================================================================
# Debug 模式
# ============================================================================
# 啟用後會在日誌中顯示已載入的 Partner 列表
Environment=DEBUG_PARTNERS=true

# ============================================================================
# 說明
# ============================================================================
# 此文件僅用於開發環境，由 ./scripts/setup.sh dev 自動複製到：
# ~/.config/containers/systemd/ssl-proxy.container.d/environment.conf
#
# 生產環境不使用此文件，改用 Podman Secrets 管理
